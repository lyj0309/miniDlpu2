/* pages/setting-detail/AboutUs.wxss */
@media (prefers-color-scheme: dark) {
  page, image,open-data {
    background-color: #1f1f1f;
    filter: invert(1) hue-rotate(.5turn);
  }
  image,open-data{
    opacity: .75;
  }
}
/* pages/setting-detail/thanks.wxss */
page{
  width: 90%;
  margin: 10rpx 5%;
  color: black;
}

.title {
  margin-top: 30rpx;
  font-size: 36rpx;
  text-align: center;
}
.version {
  text-align: center;
  font-size: 26rpx;
  color: gray;
}
.self-intro {
  margin-top: 30rpx;
  line-height: 38rpx;
  font-size: 28rpx;
  text-indent: 2em;
  color: #676262;
}
.repo {
  margin-top: 30rpx;
  line-height: 38rpx;
  font-size: 28rpx;
}
.repo span {
  color: blue;
}



.head-box{
  width: 100%;
  height: 180rpx;
  text-align: center;
  font-family: Microsoft YaHei;
  font-size: 56rpx;
  line-height: 180rpx;
  letter-spacing: 20rpx;
}
.head-box-tips{
  width: 100%;
  margin-top: -45rpx;
  text-align: center;
  font-family: SimSun;
  line-height: 20rpx;
  font-size: 20rpx;
  letter-spacing: 0;
  color: #bbb;
}
.body-box{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.item{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.item-title{
  height: 66rpx;
  padding: 0 20rpx 0;
  line-height: 66rpx;
  text-align: center;
  font-family: KaiTi;
  font-size: 42rpx;
  border-bottom: #999 solid 1px;
}
.item-content{
  margin: 30rpx 0rpx 80rpx;
  font-family: SimSun;
  font-size: 30rpx;
}

