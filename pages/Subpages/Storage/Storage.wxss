/* pages/Account_Subpages/Storage/Storage.wxss */
@media (prefers-color-scheme: dark) {
  page, image,open-data {
    background-color: #1f1f1f;
    filter: invert(1) hue-rotate(.5turn);
  }
  image,open-data{
    opacity: .75;
  }
}
view.list{
  background-color: #FFFFFF;
  border-radius: 18px;
  box-sizing: border-box;
  padding: 10px 10px;
  width: 84%;
  margin: 15px 8%;
}
view.list view.semester {
  font-size: 1.5em;
  margin-bottom: 7px;
}

view.list view.time {
  opacity: .8;
  margin: 3px 0;
}

view.list view.select{
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 10px;
}

view.list view.select view{
  text-align: center;
  border-radius: 100px;
  height: 20px;
  padding: 10px 0;
}

view.list view.select view.repa{
  width: 68%;
  color: #FFFFFF;
  background-color: #3EA3D8;
}

view.list view.select view.dele{
  width: 28%;
  color: #FFFFFF;
  background-color: #ff9393;
}

/* 创建学期 */
picker.add{
  text-align: center;
  width: 84%;
  margin: 15px 8%;
  box-sizing: border-box;
  border: 1.5px rgba(0, 0, 0, .3) dashed;
  border-radius: 18px;
  padding: 8px;
  color: rgba(0, 0, 0, .4);
}
picker.add image{
  width: 100%;
  height: 30px;
  opacity: .4;
}