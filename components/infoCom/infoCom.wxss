/* 刷新旋转 */
@keyframes rotate {

    0% {
        transform: rotate(0deg);
    }

    100% {
        transform: rotate(360deg);
    }

}

.examCount {
    text-align: center;
    margin: 20rpx;
}

.empBlock {
    height: 228rpx;
    width: 618rpx;
    overflow: auto;
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    align-content: flex-start
}

.empBlockItem {
    margin: 6rpx;
    border-radius: 12rpx;
    box-shadow: 1.5rpx 1.5rpx 4rpx 2rpx rgba(136, 136, 136, 0.6);
    /*background-image: linear-gradient(to right,rgba(72,160,196,0.2),rgba(541,187,97,0.4) ,rgba(20,60,122,0.2));*/
    background-image: linear-gradient(-55deg, rgba(233, 218, 72, 0.7), rgba(255, 195, 107, 0.4));
    height: 100rpx;
    width: 215rpx;
}

.sticky{
    position: sticky !important;
    top: 0rpx;
    left: 0;
    z-index: 9;
}

.empItems {
    display: flex;
    flex-direction: row;
    margin-left: 5rpx;
}

.bd {

    border-left-style: solid;
    height: 30rpx;
}

.dot {
    margin: 5.8rpx;
    height: 23rpx;
    width: 23rpx;
    border-radius: 25rpx;
}

.green {
    background-color: #77C182;
}

.red {
    background-color: #CC5983;
}

.grey {
    background-color: gray;
}

.btn {
    display: flex;
    justify-content: space-around;
}

.modal-hang{
    display: flex;
    flex-direction: row;
}
.modal-hang-left{
    display: flex;
    flex: 1;
    /* border-bottom: 1px darkgray solid; */
    /* 右对齐，不知道为什么text-align:right不行 */
    justify-content:flex-end;
}
.modal-hang-right{
    display: flex;
    flex: 1;
    /* border-bottom: 1px darkgray solid; */
    padding-left: 5rpx;
    justify-content:flex-start;
}