.van-dropdown-item {
    top: 50px !important;
}

.title {
    text-align: center;
    font-size: 30rpx;
    margin: 20rpx;
}

.replay {
    animation:rotate 2s linear infinite;
    /*    animation-name:rotate;
linear 线性
